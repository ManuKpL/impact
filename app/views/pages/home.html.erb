<%= render 'shared/banner' %>
<!-- give access to next section "candidates" -->
<div class="home-content home-content-white" id="liste-candidats">
  <div class="link-back link-back-dark text-center">
    <%= link_to root_path << "#accueil" do %>
      <i class="fa fa-angle-up"></i>
      <p>Haut<br>de<br>page</p>
    <% end %>
  </div>
  <!-- display all candidates -->
  <h4 class="text-center">Cliquez sur un des candidats pour afficher son profil</h4>
  <br>
  <div class="container text-center">
    <div class="row">
      <% @candidates.each do |candidate| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="candidate-card pulsed">
            <%= image_tag candidate.picture, class: "candidate-card shadow"%>
            <%= link_to candidate_path(candidate.id), class: "candidate-card-shadow" do %>
              <h4><%= candidate.name %></h4>
              <h5>@<%= candidate.screen_name %></h5>
              <p><%= candidate.party %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- give access to accueil -->
<div class="home-content home-content-blue" id="a-propos">
  <div class="link-back link-back-white text-center">
    <%= link_to root_path << "#accueil" do %>
      <i class="fa fa-angle-up"></i>
      <p>Haut<br>de<br>page</p>
    <% end %>
  </div>
  <!-- content section "A propos" -->
  <div class="container text-center">
      <div class="row">
        <div class="col-xs-12">
          <div class="banner-data">
            <%= image_tag 'white_pie.png', height:"50", class:"banner-icon" %>
            <h5 class="text hidden-xs">Analysez le message de chaque candidat!</h5>
            <p>Quels mots emploient-ils? Quel est leur impact? Sont ils performants? </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="banner-data">
            <%= image_tag 'white_network.png', height:"50", class:"banner-icon" %>
            <h5 class="text hidden-xs">Analysez la communauté de chaque candidat!</h5>
            <p>Êtes vous dans leur cible? Qui relaie leurs twitts? Sont ils performants?</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="banner-data">
            <%= image_tag 'white_bird.png', height:"50", class:"banner-icon"%>
            <h5 class="text hidden-xs">Comparez les candidats!</h5>
            <p>Mettez vos candidats face à face. Qui maitrise Twitter? Qui est à côté de la plaque?</p>
            <br>
            <%= link_to "Comparer les candidats!", "#",class: "btn btn-danger" %>
          </div>
        </div>
    </div>
  </div>
</div>

