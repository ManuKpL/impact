<div class="container">
  <div class="row">
    <% @candidates.each do |candidate| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <%= image_tag candidate.picture, class:"card-user" %>
          <h1 class="card-text"><%= candidate.name %></h1>
        </div>
      </div>
    <% end %>
  </div>
</div>

