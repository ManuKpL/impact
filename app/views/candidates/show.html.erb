<!-- THIS IS THE CANDIDATE SHOW VIEW -->

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="card-stats card-stats-marged">
        <div class="row">
          <div class="id-card">
            <!-- profile picture-->
            <div class="col-xs-12 col-sm-4 col-md-2" id="picture-container">
              <%= image_tag @candidate.picture, class: "profile-picture" %>
            </div>
            <!-- profile infos -->
            <div class="col-xs-12 col-sm-5 col-md-6">
                <h4><%= @candidate.name %></h4>
              <p><%= @candidate.party %></p>
              <%=link_to  "https://twitter.com/#{@candidate.screen_name}", target: "_blank"  do %>
                <p>@<%=@candidate.screen_name %></p>
              <% end %>
              <p><%= @candidate.description %></p>
            </div>
            <!-- info metrics -->
            <div class="col-xs-12 col-sm-3 col-md-4">
              <ul class="list-unstyled text-left">
                <li>
                  <i class="fa fa-clock-o"></i>
                  <span class="metric-red">
                    <%= @candidate.account_creation%>
                  </span>
                </li>
                <li>
                  <i class="fa fa-twitter"></i>
                  <span class="metric-red">
                    <%= @candidate.tweets_count%>
                  </span>tweets
                </li>
                <li>
                  <i class="fa fa-users">
                    <span class="metric-red"><%= @candidate.followers_count %></span>
                  </i>abonnés
                </li>
                <li>
                  <i class="fa fa-users">
                    <span class="metric-red"><%= @candidate.following_count %></span>
                  </i>abonnements
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- navigation arrows -->
    <div class="row">
      <div id="navigation">
        <div class="col-xs-6 col-md-4">
          <div class="candidate-nav text-center">
            <%=link_to candidate_path(@previous_id) do %>
              <i class="fa fa-arrow-left"></i>
              <%= Candidate.find(@previous_id).name %>
            <% end %>
          </div>
        </div>
        <div class="col-xs-6 col-md-4">
          <div class="text-center">
            <%= link_to "Comparer les candidats", compare_path, class: "btn btn-danger", id:"comparebtn" %>
          </div>
        </div>
        <div class="col-xs-6 col-md-4">
          <div class="candidate-nav text-center">
            <%=link_to candidate_path(@next_id) do %>
              <%= Candidate.find(@next_id).name %>
              <i class="fa fa-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!--  Sa communauté -->
    <div class="row">
      <div class="col-xs-12">
        <div class="card-stats">
          <div class="row">
            <div class="cols-xs-12 col-sm-12 col-md-6">
              <h2>Ses abonnés</h2>

              <div class="row">
                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><i class="fa fa-comment"></i><span class="number"> <%= @followers_tweets.average %></span></p>
                    <p>nombre moyen de tweets de chaque abonné</p>
                  </div>
                </div>

                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><i class="fa fa-users"></i><span class="number"> <%= @followers_followers.average %></span>
                    </p>
                    <p>nombre moyen d'abonnés de chaque abonné</p>
                    <% if false %>
                      <p><%= @followers_followers.percentage %>% ont plus de 1000 followers</p>
                    <% end %>
                  </div>
                </div>

                <div class="col-xs-6">
                  <div class="mini-box">
                     <p><span class="number"><%= @followers_tweets.percentage %>%</span> de ses abonnés ont tweeté plus de 2000 fois</p>
                  </div>
                </div>

                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><span class="number"><%= 100 - @followers_followings.percentage %>%</span> de ses abonnés suivent moins de 50 personnes</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xs-12 col-sm-6">
              <h2>
                Les termes qui apparaissent le plus dans la bio des followers du candidat :
              </h2>
              <% if @topwords_bio.length < 20 %>
              <div id="talkbubble">h</div>
              <% else %>
              <svg class="chart" id="bio-followers">
              </svg>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- SES EXPRESSIONS -->
    <div class="row">
      <div class="col-xs-12">
        <div class="card-stats" data-sr="over 1s">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6">
              <h2>Son Compte</h2>

              <div class="row">
                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><i class="fa fa-retweet"></i><span class="number"> <%= @retweets_on_candidate.average %></span></p>
                    <p>Retweets par tweet</p>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><i class="fa fa-star"></i><span class="number"> <%= @favorites_on_candidate.average %></span></p>
                    <p>Favoris par tweet</p>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="mini-box">
                   <p><span class="number"> <%= @retweets_on_candidate.percentage %>%</span></p>
                   <p>de tweets retweetés au moins 10 fois</p>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="mini-box">
                    <p><span class="number"><%= @favorites_on_candidate.percentage %>% </span></p>
                     <p>de tweets favs au moins 5 fois</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="col xs-12 col-sm-6">
              <h2>Les hashtags que ce candidat utilise le plus (par nombre d'occurences) :</h2>
              <% if @hashtags_in_tweets.length < 5 %>
              <div class="flexed">
                <div id="talkbubble">
                  <p class="text-center">
                    Désolé, les données disponibles sont insuffisantes pour vous montrer des résultats pertinents...
                  </p>
                </div>
                <i class="fa fa-twitter" id="birdy"></i>
              </div>
              <% else %>
                <svg class="chart" id="tweet-hashtags"></svg>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>

